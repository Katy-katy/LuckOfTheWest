<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wildwestgameboard">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schoolhouse"
        android:id="@+id/schoolButton"
        android:background="@null"
        android:height="170dp"
        android:width="130dp"
        android:textSize="15dp"
        android:gravity="top|center_horizontal"
        android:paddingTop="50dp"
        android:onClick="startSchool"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/Day"
        android:layout_alignEnd="@+id/Day" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mining"
        android:id="@+id/miningButton"
        android:background="@null"
        android:height="100dp"
        android:width="100dp"
        android:layout_alignBottom="@+id/imageview_animation_downarrow4"
        android:layout_alignRight="@+id/imageview_animation_downarrow3"
        android:layout_alignEnd="@+id/imageview_animation_downarrow3"
        android:onClick="startMine" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BANK"
        android:id="@+id/bank_button"
        android:height="250dp"
        android:background="@null"
        android:width="70dp"
        android:onClick="startBank"
        android:layout_below="@+id/Score"
        android:gravity="top|center_horizontal"
        android:paddingTop="60dp"
        android:layout_toLeftOf="@+id/schoolButton"
        android:layout_toStartOf="@+id/schoolButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saloon"
        android:id="@+id/barButton"
        android:background="@null"
        android:height="180dp"
        android:width="110dp"
        android:onClick="startSaloon"
        android:gravity="center_horizontal"
        android:paddingTop="60dp"
        android:layout_alignTop="@+id/imageview_animation_downarrow3"
        android:layout_alignLeft="@+id/miningButton"
        android:layout_alignStart="@+id/miningButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/Score"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/Day"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageview_animation_downarrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/animation_list_downarrow"
        android:layout_alignTop="@+id/imageview_animation_downarrow2"
        android:layout_alignRight="@+id/schoolButton"
        android:layout_alignEnd="@+id/schoolButton"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp" />

    <ImageView
        android:id="@+id/imageview_animation_downarrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/animation_list_downarrow_back"
        android:layout_alignTop="@+id/bank_button"
        android:layout_alignLeft="@+id/bank_button"
        android:layout_alignStart="@+id/bank_button" />

    <ImageView
        android:id="@+id/imageview_animation_downarrow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/animation_list_downarrow_back"
        android:layout_below="@+id/Day"
        android:layout_toRightOf="@+id/imageview_animation_downarrow4"
        android:layout_toEndOf="@+id/imageview_animation_downarrow4" />

    <ImageView
        android:id="@+id/imageview_animation_downarrow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/animation_list_sidearrow"
        android:onClick="startMine"
        android:layout_below="@+id/schoolButton"
        android:layout_toRightOf="@+id/Day"
        android:layout_toEndOf="@+id/Day"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp" />



</RelativeLayout>