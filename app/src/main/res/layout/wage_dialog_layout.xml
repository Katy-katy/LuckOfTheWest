<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/inc_up"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/dec_down"
        android:layout_alignStart="@+id/dec_down" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/dec_down"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/inc_up"
        android:layout_toRightOf="@+id/wager_cancel"
        android:layout_toEndOf="@+id/wager_cancel"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:id="@+id/wager_confirm"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/wager_cancel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:id="@+id/wager_cancel"
        android:layout_below="@+id/dec_down"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/wage_amount"
        android:layout_above="@+id/dec_down"
        android:layout_alignLeft="@+id/wager_confirm"
        android:layout_alignStart="@+id/wager_confirm" />

</RelativeLayout>